server {
    listen       80;
    listen  [::]:80;
    server_name  {{ nginx.server_name }};
    root  {{ document_root }};

    access_log  {{ nginx.access_log }}  main;
    error_log  {{ nginx.error_log }};

    location / {
        index  index.html index.htm;
    }

    location ~ /\.ht {
        deny  all;
    }
}